{
  "version": 2,
  "builds": [
    {
      "src": "src/bot/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/webhook",
      "dest": "/src/bot/index.js",
      "methods": ["POST"]
    },
    {
      "src": "/api/set-webhook",
      "dest": "/src/bot/index.js",
      "methods": ["GET"]
    },
    {
      "src": "/health",
      "dest": "/src/bot/index.js",
      "methods": ["GET"]
    },
    {
      "src": "/(.*)",
      "dest": "/src/bot/index.js"
    }
  ]
}